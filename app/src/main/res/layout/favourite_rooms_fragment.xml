<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@android:color/white"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.main.favourite.FavouriteRoomsFragment">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar_favourite"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme"
        app:navigationIcon="@drawable/arrow_left"
        app:title="@string/favourite_rooms_title"
        app:titleTextColor="@android:color/white" />

    <EditText
        android:id="@+id/edittext_filter"
        android:layout_width="match_parent"
        android:hint="@string/hledej_title"
        android:layout_height="50dp"/>

    <com.airbnb.epoxy.EpoxyRecyclerView
        android:id="@+id/epoxy_favourite_rooms"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

</LinearLayout>